<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000"
    tools:context="pl.proaktyw.proaktyw.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_margin="8sp">

        <ImageView
            android:id="@+id/main_imageView"
            android:layout_width="0sp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_gravity="center"
            android:layout_weight="0.5"
            android:src="@drawable/proaktyw"/>

        <LinearLayout
            android:id="@+id/main_linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:layout_gravity="center"

            android:background="#000"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8sp">

                <ImageButton
                    android:id="@+id/start_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_button"
                    android:textColor="#000000"
                    android:background="@color/transparent"
                    android:onClick="goToNewGameActivity"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_color_black"
                    android:text="@string/start_button"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8sp">

                <ImageButton
                    android:id="@+id/game_editor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_button"
                    android:textColor="#000000"
                    android:background="@color/transparent"
                    android:text="@string/game_editor_button"
                    android:onClick="goToGameEditorActivity"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_color_black"
                    android:text="@string/game_editor_button"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="8sp">

                <ImageButton
                    android:id="@+id/instruction_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/main_button"
                    android:textColor="#000000"
                    android:background="@color/transparent"
                    android:text="@string/instruction_button"
                    android:onClick="goToInstructionActivity"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="@color/text_color_black"
                    android:text="@string/instruction_button"/>

            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/publish_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:textSize="20sp"
        android:textColor="@color/text_color_white"
        android:text="Opublikuj projekt !!!"/>

    <TextView
        android:id="@+id/publish_dialog_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16sp"
        android:layout_marginTop="16sp"
        android:layout_below="@+id/publish_dialog_title"
        android:textSize="16sp"
        android:textColor="@color/text_color_white"
        android:text="Czy na pewno chcesz opublikowaÄ‡ \nprojekt : nazawa projektu ?"/>

    <Button
        android:id="@+id/publish_dialog_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_below="@+id/publish_dialog_message"
        android:layout_toStartOf="@+id/publish_dialog_ok_button"
        android:layout_marginStart="8sp"
        android:layout_marginBottom="8sp"
        android:background="@color/transparent"
        style="@style/Base.Widget.AppCompat.Button"
        android:text="anuluj"/>

    <Button
        android:id="@+id/publish_dialog_ok_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16sp"
        android:layout_marginEnd="8sp"
        android:layout_below="@+id/publish_dialog_message"
        android:layout_alignParentEnd="true"
        android:background="@color/transparent"
        style="@style/Base.Widget.AppCompat.Button"
        android:text="Ok"/>

</RelativeLayout>